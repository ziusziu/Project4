<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_calendar_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccentDark"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/main_autocomplete_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ems="10"
            android:hint="Destination"
            android:textColorHint="@color/colorPrimayLight"/>

        <Button
            android:id="@+id/main_addLocation_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorAccentDark"
            android:text="Go!"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Origin"
        android:textSize="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_origin_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Destination"
        android:textSize="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_destination_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Saved Trips"
        android:textSize="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_savedTrips_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
